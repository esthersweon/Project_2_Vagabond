<div>
<p> Hello <%= @user.first_name + " " + @user.last_name %> </p>
<p>Date Joined: <%= @user.created_at %></p>
<p>Current City: <%= @user.current_city %></p>

</div>

<div class="container-modal">
<!-- Add Playlist Modal -->
<div class="margin-top-20">
 <button data-toggle="modal" data-target="#edit_modal" class="btn btn-primary">Edit Profile</button>
</div>
<div id="edit_modal" class="modal fade">
 <div class="modal-dialog">
   <div class="modal-content">
     <%= form_for @user do |f| %>
       <div class="modal-body">
         <div class="margin-top-20">
           <%= f.text_field :first_name, placeholder: "First Name"%>
         </div>
         <div class="margin-top-20">
           <%= f.text_field :last_name, placeholder: "Last Name"%>
         </div>
         <div class="margin-top-20">
           <%= f.email_field :email, placeholder: "Email"%>
         </div>
         <div class="margin-top-20">
           <%= f.text_field :current_city, placeholder: "Current City"%>
         </div>
         <div class="margin-top-20">
           <%= f.password_field :password, placeholder: "Password"%>
         </div>
       </div>

       <div class="modal-footer">
         <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
         <%= f.submit "Submit Changes" %>
       </div>
       <% end %>

   </div>
 </div>
</div>
</div>
